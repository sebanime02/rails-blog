.modal.fade.bs-example-modal-lg#change_scenic_artistes_attributes_modal
  .modal-dialog.modal-lg{role: "document"}
    .modal-content
      .container
        = simple_form_for :update_runners, url: change_scenic_artistes_attributes_v2_shortlist_path, method: :post, remote: true do |f|
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h3.modal-title Update Artistes
          .modal-body
            .row
              .col-xs-12
                %label Set costume and specific role or character.
            .row
              .col-xs-12
                %label Artistes:
                %em.warning-messages
            .row
              .col-xs-12
                = f.input :runner_ids, as: :hidden, input_html: {value: '', id: 'runners_to_update'}
                = f.input :character, label: "Character", input_html: {value: ''}, placeholder: 'Role or character', required: false
                = f.input :costume_id, as: :select, placeholder: "Costume", collection: [], include_blank: true, input_html: {id: 'update_costume_id'}
                = f.input :transport_method, label: "Transport method", include_blank: false, as: :select, collection: ["","Car","Private","Public"]
          .modal-footer
            = f.button :submit, 'Accept', class: 'btn btn-primary',  data: { disable_with: 'Sending...' }
