.modal.fade.bs-example-modal-lg#add_artistes_to_book_modal
  .modal-dialog.modal-lg{role: "document"}
    .modal-content
      .container
        = simple_form_for @shortlist, url: add_artistes_to_book_v2_shortlist_path(@shortlist), method: :post do |f|
          .modal-header
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %h4.modal-title Add Artistes to Book
          .modal-body
            .row
              .col-xs-12
                %label Adding artistes to the book will allow the AD to see them in the share version.
              .col-xs-12
                %label Please confirm you want to add:
                %em.warning-messages
                %label to the book.
            = f.input :artistes_to_add_to_book, as: :hidden, input_html: {value: ''}
          .modal-footer
            = f.button :submit, 'Confirm', class: 'btn btn-primary'
